<table>
	<%= form_for @user, url: user_path(@user) do |f| %>
		<tr><td><%= f.label :name %>
		<td><%= f.text_field :name, autofocus: true, required: true %>

		<tr><td><%= f.label :age %>
		<td><%= f.text_field :age %>

		<tr><td><%= f.label :phone %>
		<td><%= f.text_field :phone %>

		<tr><td><%= f.label :city %>
		<td><%= f.text_field :city %>

		<tr><td><%= f.label :email %>
		<td><%= f.email_field :email, required: true %>

		<tr><td><%= f.submit :Submit %>
	<% end %>
</table>